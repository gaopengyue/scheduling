page {
  padding-bottom: 30rpx;
}
.top {
  position: sticky;
  top: 0;
  z-index: 9;
}
.picker {
  display: flex;
  align-items: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  background: #fff;
  padding-bottom: 20rpx;
  /* padding: 18rpx 28rpx; */
  /* color: #fff; */
  /* background: #ea7274; */
  
}
.picker picker view {
  background: url(data:img/jpg;base64,) no-repeat center right;
  background-size: 54rpx;
  padding: 5rpx 52rpx 5rpx 28rpx;
  /* border: 1rpx solid #efefef; */
  /* border-radius: 100rpx; */
}
.picker > view {
  padding: 0 10rpx;
  font-weight: normal;
}
.week {
  display: flex;
  align-items: center;
  text-align: center;
  padding: 30rpx 0;
  background: #fff;
  box-shadow: 0 8rpx 10rpx 0 rgba(0,0,0,0.02);
}
.week view {
  width: 14.2857%;
  font-size: 28rpx;
}

.list {
  display: flex;
  flex-wrap: wrap;
  text-align: center;
  border-top: 1rpx solid #efefef;
}
.item {
  width: 14.2857%;
  font-size: 24rpx;
  border-right: 1rpx solid #efefef;
  border-bottom: 2rpx solid #efefef;
  box-sizing: border-box;
}

.date-item {
  color: #666;
  padding: 10rpx 0;
  /* border-bottom: 1rpx solid #efefef; */
}
.kind-item {
  font-size: 28rpx;
  color: #333;
  padding: 8rpx 0;
  text-align: left;
  position: relative;
  padding-left: 36rpx;
}
.kind-item:after {
  content: "";
  position: absolute;
  top: 50%;
  left: 10rpx;
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  box-sizing: border-box;
  border: 1rpx solid #dfdfdf;
  transform: translateY(-50%);
}
.kind-item.on {
  color: #e6545f;
}
.kind-item.on:after {
  border-color: #e6545f;
  background-color: #ea7274;
}
