page {
    background: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 100vh;
  }
  .logo {
    padding-top: 30rpx;
  }
  .logo image {
    width: 523rpx;
    height: 57rpx;
  }
  .btm {
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    bottom: 60rpx;
    left: 50%;
    transform: translateX(-50%);
  }
  .login, .add {
    width: 120rpx;
    line-height: 120rpx;
    height: 120rpx;
    color: #fff;
    background-color: #ea7274;
    border: 1rpx solid #e6545f;
    font-size: 28rpx;
    border-radius: 50%;
    text-align: center;
  }
  .login:after {
    border: none;
  }